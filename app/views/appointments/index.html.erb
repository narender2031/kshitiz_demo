<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table class="ui sortable celled table">
  <thead>
    <tr>
      <th>Doctor name</th>
      <th>Patient name</th>
      <th>Disease</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= Doctor.find_by(id: appointment.doctor_id).doctor_name %></td>
        <td><%= Patient.find_by(id: appointment.patient_id).patient_name %></td>
        <td><%= appointment.disease %></td>
        <td><%= link_to 'Show', appointment %></td>
        <%if appointment.user_id == current_user.id%>
          <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
          <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
